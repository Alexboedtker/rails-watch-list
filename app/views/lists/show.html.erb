<div class="main-container">
  <h2><%= @list.name %></h2>
  <div class="row">
    <div class="col-8">
      <% @list.bookmarks.each do |bookmark| %>
        <%= bookmark.movie.title %>
        <%= bookmark.comment %>
        <%= link_to 'Delete', bookmark, method: :delete %>
      <% end %>
    </div>
    <div class="col-4">
      <%= link_to 'Add a Bookmark', new_list_bookmark_path(@list) %>
    </div>
  </div>
</div>
